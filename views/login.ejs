<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body class="text-center">
  <div style="position: absolute; top: 20%; left: 40%; ">
    <h1 class="h3 mb-3 fw-normal"> Login </h1>
    <% if (messages.error) { %>
      <%= messages.error %>
        <% } %>
          <form action="/login" method="POST">
            <div class="form-floating p-1 rounded">
              <input placeholder="Email Address" type="email" id="email" name="email" required>
            </div>
            <div class="form-floating p-1 mb-1 rounded">
              <input placeholder="Password" type="password" id="password" name="password" required>
            </div>
            <button class="w-20 btn btn-lg btn-primary" id="submit-button" type="submit">Login</button>
            <button class="w-20 btn btn-lg btn-dark" onclick="createUsingSnap()">Login using snap</button>
          </form>
          <a href="/register" class="text-muted">Register</a>
  </div>

</body>

<script src="utils/snaputils.js"></script>